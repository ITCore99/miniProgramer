

page
{
  width:100%;
  height:100%;
  background: rgba(250, 250, 250, 1);
}
.info
{
  background: rgba(255, 255, 255, 1);
  padding:0 30rpx 0 32rpx;
}
.info .item
{
  display: flex;
  height: 108rpx;
  border-bottom: 2rpx solid rgba(198, 198, 198,.3);
  align-items: center;
}
.font 
{
  font-family: MicrosoftYaHei;
  font-weight: 400;
}
.item .title
{
  font-size: 28rpx;
  color:rgba(53, 53, 53, 1);

}
.item .input
{
  height: 108rpx;
  padding-left:48rpx;
  font-size:24rpx;
  color:rgba(53, 53, 53, 1);
  flex:1;
}
.placeholder
{
   font-size: 24rpx;
   color:rgba(136, 136, 136, 1); 
}
.item .regionTitle
{
  font-size: 28rpx;
  color:rgba(53, 53, 53, 1);
}
.region .back
{
  background:#409eff;
  width: 20rpx;
  height: 34rpx;
  
}
.picker
{
  font-size: 24rpx;
  margin-left:18rpx;
  color:rgba(136, 136, 136, 1);
}
.placeholderTextarea
{
  
  font-size: 24rpx;
  color:rgba(136, 136, 136, 1);
}
.textarea
{
  padding-left: 12rpx !important;
  padding-top: 12rpx; 
  font-size:24rpx;
  color:rgba(53, 53, 53, 1);
  line-height: 36rpx;
}
.setting
{
  margin-top:50rpx;
  background: rgba(255, 255, 255, 1);
  padding:0 30rpx 0 32rpx;
}
.setting .item
{
  display: flex;
  height: 108rpx;
  border-bottom: 2rpx solid rgba(198, 198, 198,.3);
  align-items: center;
  justify-content: space-between;
}
.default
{
  color:#353535;
  font-size: 28rpx;
}
.delete
{
  font-size: 28rpx;
  color:rgba(255, 0, 0, 1);
}
.wx-switch-input
{
  width: 90rpx !important;
  height: 44rpx !important;
}
.wx-switch-input::before
{
  width: 88rpx !important;
  height: 44rpx !important;
}
.wx-switch-input::after /**中间的小球*/
{
  width: 46rpx !important;
  height: 40rpx !important;
}